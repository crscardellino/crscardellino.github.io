    <script type="text/javascript">
      $("#submit-contact-form").click(function(event) {
        event.preventDefault();

        $("#name").removeClass("has-error");
        $("#email").removeClass("has-error");
        $("#message").removeClass("has-error");
        $("#respond-message").addClass("hide");
        $("#respond-message").empty();

        $.post("http://localhost/email.php",
          $("#contact-form").serialize(),
          function (data) {
            if (data.return == "ERROR") {
              if (data.value == "INVALID_NAME") {
                $("#name").addClass("has-error");
                $("#name").focus();
                $("#respond-message").addClass("message-error");
                $("#respond-message").removeClass("hide");
                $("#respond-message").append("Invalid name");
              } else if (data.value == "INVALID_EMAIL") {
                $("#email").addClass("has-error");
                $("#email").focus();
                $("#respond-message").addClass("message-error");
                $("#respond-message").removeClass("hide");
                $("#respond-message").append("Invalid email address");
              } else if (data.value == 'INVALID_MESSAGE') {
                $("#message").addClass("has-error");
                $("#message").focus();
                $("#respond-message").addClass("message-error");
                $("#respond-message").removeClass("hide");
                $("#respond-message").append("Invalid message");
              } else if (data.value == 'MAIL_NOT_SEND') {
                $("#message").addClass("has-error");
                $("#message").focus();
                $("#respond-message").addClass("message-error");
                $("#respond-message").removeClass("hide");
                $("#respond-message").append("Error sending message");
              }
            } else {
              $("#respond-message").addClass("message-success");
              $("#respond-message").removeClass("hide");
              $("#respond-message").append("Message sent");
            }
          });
      });
    </script>
